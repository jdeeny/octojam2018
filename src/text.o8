
# v2,v3 = string location
# v0 = x, v1 = y

:alias DRAW_STRING_OFFSET vA
: draw_string
  v2 := v0
  Trampoline-Set-I-v2v3 draw_string_i:=string
  vA := 0
: draw_string_loop
  Trampoline: draw_string_i:=string
  i += DRAW_STRING_OFFSET
  load v0-v0
  i := glyph_table
  i += v2
  load v2-v3 #address pf glyph
  load

: draw_glyph
  #lookup glyph
  sprite v2 v1
