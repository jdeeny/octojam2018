
:alias text_glyph v0
:alias text_glyph_width v0
:alias text_x v1
:alias text_y v2
: text_draw_glyph
    i := long font_table
    i += text_glyph
    i += text_glyph
    load v3 - v4 # load address of glyph
    i := glyph_target
    save v3 - v4
    0xF0 0x00 : glyph_target 0x00 0x00 # i := long *glyph
    load v0
    sprite text_x text_y 7
    text_x += text_glyph_width
    ;
