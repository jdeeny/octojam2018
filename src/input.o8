
# Input Table
# For each key:
#   1B  key number
#   2B  jump to handler
#   2B  pointer to help text

:calc input_entry_bytes { 1 + 2 + 2 }


: input_handler
  i := input_table    # maybe change this with code modification?
: input_handler_loop
  load v4     # Load v0 = key, v1-2 = handler v3-4 = help
  if v0 == 16 then return
  if v0 key then do_stuff
  jump input_handler_loop

: do_stuff
  vF := vF
  :breakpoint key_down
  ;
